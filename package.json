{
  "name": "delta-launcher",
  "version": "1.0.0",
  "description": "",
  "main": "./dist/main.js",
  "scripts": {
    "build": "tsc",
    "start": "npm run build && electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "build-exe": "electron-builder build --win --publish never",
    "deploy-exe": "electron-builder build --win --publish always"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/fs-extra": "^9.0.11",
    "@types/node-fetch": "^2.5.11",
    "electron-log": "^4.3.5",
    "fs-extra": "^10.0.0",
    "keytar": "^7.7.0",
    "node-fetch": "^2.6.1",
    "rimraf": "^3.0.2"
  },
  "devDependencies": {
    "@types/electron": "^1.6.10",
    "electron": "^13.1.4",
    "electron-builder": "^22.11.7"
  },
  "build": {
    "appId": "com.albee.app",
    "productName": "Delta Launcher",
    "target": "nsis",
    "directories": {
      "output": "build"
    },
    "extraResources": [
      "src/res/java/"
    ],
    "win": {
      "publish": {
        "provider": "github"
      }
    },
    "publish": [
      {
        "provider": "github",
        "owner": "AlbeeTheLoli",
        "repo": "Delta-Launcher"
      }
    ],
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "prettier": {
    "printWidth": 320,
    "tabWidth": 4,
    "trailingComma": "es5"
  }
}
